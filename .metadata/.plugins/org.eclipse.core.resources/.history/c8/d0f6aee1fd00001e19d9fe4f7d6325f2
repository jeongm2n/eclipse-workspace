@charset "UTF-8";

@import url(//fonts.google.com/specimen/Gugi?subset=korean&noto.script=Kore);
/* 레이아웃의 큰 틀이 되는 body의 css */
	body{
		text-align : center;
		width : 1350px;
		background-color : #BCC6CC;
	}
	
	/* 헤더, 네비게이션, 섹션, aside의 공통적인 css */
	header, nav, section, aside{
		border : 1px solid #999;
		margin-bottom : 20px;
	}
	
	/* body위에 덮을 div의 css */
	div#wrapper{
		width : 100%;
		text-align : left;
		min-height : 400px;
		margin : 0 auto;
		float: left;
		padding : 25px;
	}
	
	/* header의 css */
	header{
		font-family : 'Gugi', cursive;
		width : 100%; /* wrapper와 너비가 같게 */
		background-color : #E0FFFF;
		text-align : center;
		font-size : 50pt;
		height : 100px;
		padding-top : 10px;
	}
	
	/* 네비게이션의 css */
	nav{
		border : 1px solid #999;
		background-color : #98AFC7;
		width : 100%;
		height : 40px;
		vertical-align : middle;
	}
	
	/* 주로 서브메뉴에 사용하는 aside를 방명록을 위한 공간으로 만들기 위한 css */
	aside{
		width : 25%;
		height : 100%;
		padding-top:20px;
		float : right;
	}
	
	/* 주 내용이 들어갈 section의 css */
	section{
		/* 경계선과 너무 딱 붙어서 내용들이 나오면 안예뻐서 경계선과 좀 떨어져서 내용들을 출력하기 위함 */
		padding-left : 10px;
		padding-top : 70px;
		width : 70%;
		float : left;
	}
	
	.shadow{
		text-shadow : 5px 7px 10px gray;
	}
	
	/* 네비게이션에 적용할 주메뉴의 css */
	.menu{
		list-style : none;
		line-height : 5px;
		text-align : center;
		position : relative;
		top : 10%;
	}
	
	/* 주 메뉴 항목들의 css */
	.link {
        color : white;
        font-size : 16pt;
        font-weight : bold;
        width : 150px;
        display : block;
        float : left;
    }
        
   	/* section안의 div들의 css */
   	.div{
   		width : 95%;
   		height : 350px;
   		padding-left : 10px;
       	margin-bottom : 10px;
       	border : 1px solid #999;
